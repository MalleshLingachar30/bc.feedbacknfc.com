# Server Port
PORT=3000

# Super Admin Bypass Code (optional)
# Set this to allow logging in as super admin without email verification
# Useful when email delivery is not working or for quick access
# Leave empty to disable bypass in production
ADMIN_BYPASS_CODE=

# Neon Database URL
# Get from https://console.neon.tech -> Your Project -> Connection Details
DATABASE_URL=postgres://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# Resend API Key for Email Authentication
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=

# Email sender address (must be verified in Resend)
# Use onboarding@resend.dev for testing, or your verified domain
EMAIL_FROM=onboarding@resend.dev

# ==================== GOOGLE WALLET ====================
# Register at: https://pay.google.com/business/console
# Documentation: https://developers.google.com/wallet/generic

# Your Google Wallet Issuer ID (from Google Pay & Wallet Console)
GOOGLE_WALLET_ISSUER_ID=

# Google Cloud Service Account credentials (JSON string)
# Create a service account at: https://console.cloud.google.com/iam-admin/serviceaccounts
# Download the JSON key and paste the entire contents here (or use a file path)
GOOGLE_WALLET_SERVICE_ACCOUNT_KEY=

# ==================== SAMSUNG WALLET ====================
# Register at: https://partner.samsungwallet.com
# Documentation: https://developer.samsung.com/wallet

# Your Samsung Wallet Partner ID
SAMSUNG_WALLET_PARTNER_ID=

# Samsung Wallet Card ID (template ID created in portal)
SAMSUNG_WALLET_CARD_ID=

# Samsung Wallet Certificate ID (from portal)
SAMSUNG_WALLET_CERTIFICATE_ID=

# Samsung Wallet Private Key (PEM format, for signing)
# This is your partner private key used to sign cData tokens
SAMSUNG_WALLET_PRIVATE_KEY=

